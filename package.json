{
  "name": "magicclaw",
  "version": "0.1.0",
  "private": true,
  "description": "AI agent with MCP server management",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "pnpm -r --filter=!magicclaw-desktop build",
    "build:electron": "pnpm --filter api build && pnpm --filter web build && pnpm --filter magicclaw-desktop build",
    "dev": "pnpm -r --parallel --filter=!magicclaw-desktop dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev:electron": "pnpm --filter magicclaw-desktop dev",
    "start:electron": "pnpm --filter magicclaw-desktop start",
    "dist:electron": "pnpm --filter magicclaw-desktop dist",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "@nestjs/core",
      "sharp",
      "electron-winstaller"
    ]
  }
}
