{
  "name": "magicclaw",
  "version": "0.1.0",
  "private": true,
  "description": "AI agent with MCP server management",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev:desktop": "pnpm --filter desktop dev:all",
    "dev:desktop:only": "pnpm --filter desktop dev",
    "build:desktop": "pnpm --filter desktop dist",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "engines": {
    "node": ">=22"
  }
}