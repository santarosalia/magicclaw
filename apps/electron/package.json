{
  "name": "electron",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc -p tsconfig.json && electron .",
    "build": "tsc -p tsconfig.json",
    "start": "electron .",
    "dist": "pnpm run build && electron-builder"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^22.0.0",
    "electron": "^32.1.2",
    "electron-builder": "^26.7.0",
    "typescript": "^5.7.0"
  },
  "build": {
    "appId": "ai.magicclaw.app",
    "productName": "MagicClaw",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../api/dist",
        "to": "api-dist"
      },
      {
        "from": "../api/node_modules",
        "to": "api-dist/node_modules"
      },
      {
        "from": "../web/.next",
        "to": "web-next/.next"
      },
      {
        "from": "../web/node_modules",
        "to": "web-next/node_modules"
      },
      {
        "from": "../web/package.json",
        "to": "web-next/package.json"
      },
      {
        "from": "../web/next.config.ts",
        "to": "web-next/next.config.ts"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
