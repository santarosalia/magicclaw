{
  "name": "electron",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc -p tsconfig.json && electron .",
    "build": "tsc -p tsconfig.json",
    "start": "electron .",
    "dist": "pnpm run build && electron-builder"
  },
  "dependencies": {
    "api": "workspace:*"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^22.0.0",
    "electron": "^32.1.2",
    "electron-builder": "^26.7.0",
    "typescript": "^5.7.0"
  },
  "build": {
    "appId": "ai.magicclaw.app",
    "productName": "MagicClaw",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../web/out",
        "to": "web-next"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "installerDirectory": "%LOCALAPPDATA%\\Programs\\MagicClaw"
    }
  }
}