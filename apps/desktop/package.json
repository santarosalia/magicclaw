{
  "name": "desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron .",
    "dev:all": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\" \"pnpm dev\"",
    "build": "echo \"No build step for desktop\"",
    "dist": "electron-builder",
    "dist:win": "electron-builder -w --x64"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.1.8",
    "electron": "^34.0.0"
  },
  "build": {
    "productName": "MagicClaw",
    "artifactName": "MagicClaw Setup ${version}.${ext}",
    "appId": "com.magicclaw.desktop",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../api",
        "to": "api",
        "filter": [
          "dist/**/*",
          "package.json",
          "node_modules/**/*"
        ]
      },
      {
        "from": "../web",
        "to": "web",
        "filter": [
          ".next/**/*",
          "public/**/*",
          "package.json",
          "node_modules/**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "executableName": "MagicClaw"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}